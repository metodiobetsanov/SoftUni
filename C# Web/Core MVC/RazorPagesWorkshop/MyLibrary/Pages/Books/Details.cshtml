@page "{id}"
@model BookLibrary.Web.Pages.Books.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="row">

    <div class="col-md-4">
        <img src="@Model.ImageUrl" alt="Cover image for @Model.Title" />
    </div>
    <div class="col-md-8">

        <h2>@Model.Title</h2>
        <br />
        <h5>by @Html.DisplayFor(model => model.Author)</h5>

        <p>@Model.Description</p>
    </div>
</div>